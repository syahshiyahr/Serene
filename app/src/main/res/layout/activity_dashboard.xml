<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".DashboardActivity"
    android:background="@android:color/white">

    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="28dp"
        android:fontFamily="@font/montserrat"
        android:gravity="center"
        android:text="Serene"
        android:textSize="16dp"
        android:textColor="#000000"/>

    <ImageView
        android:id="@+id/iv_dashboard"
        android:layout_width="347dp"
        android:layout_height="261dp"
        android:background="@drawable/dashboard_pic"
        android:layout_marginTop="125dp"
        android:layout_centerHorizontal="true"
        />

    <TextView
        android:id="@+id/tv_welcome"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@+id/iv_dashboard"
        android:layout_marginTop="31dp"
        android:fontFamily="@font/montserrat_bold"
        android:text="Welcome, back!"
        android:textSize="20dp"
        android:gravity="center"
        android:textColor="#000000"
        />

    <TextView
        android:id="@+id/desc"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Let's calm your mind and heart"
        android:layout_below="@id/tv_welcome"
        android:layout_marginTop="10dp"
        android:textSize="14sp"
        android:gravity="center"
        android:fontFamily="@font/montserrat"
        android:textColor="#000000"/>

    <Button
        android:id="@+id/btn_signin_dashboard"
        android:layout_width="230dp"
        android:layout_height="38dp"
        android:background="@drawable/button_yellow"
        android:layout_below="@id/desc"
        android:layout_marginTop="40dp"
        android:layout_centerHorizontal="true"
        android:text="Sign In"
        android:textAllCaps="false"
        android:fontFamily="@font/montserrat"
        android:textSize="12sp"/>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:layout_below="@id/btn_signin_dashboard"
        android:layout_marginTop="40dp"
        android:gravity="center">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Don't have an account ? "
            android:fontFamily="@font/montserrat"
            android:textSize="12sp"
            android:textColor="#000000"/>

        <TextView
            android:id="@+id/tv_register_dashboard"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Register"
            android:fontFamily="@font/montserrat"
            android:textSize="12sp"
            android:textColor="#086385"/>

    </LinearLayout>




</RelativeLayout>